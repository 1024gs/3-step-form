{
  "name": "interview-exercise",
  "version": "1.0.0",
  "description": "Collaborative exercise to build a form",
  "repository": "https://gitlab.entia.io/hiring/frontend-exercise.git",
  "author": "Sam Briggs",
  "license": "UNLICENSED",
  "scripts": {
    "backend": "json-server --port 3001 --watch ./backend/db.json",
    "postinstall": "node ./build-tools/task-postinstall.js",
    "start": "npm run babel -- src && npm run sass -- src && node ./build-tools/task-start.js & npm run watch",
    "serve:dist": "node ./build-tools/task-start.js --dist",
    "build": "node ./build-tools/task-build.js",
    "test": "./node_modules/.bin/jest",
    "babel": "node ./build-tools/task-transpile-es.js",
    "sass": "node ./build-tools/task-compile-scss.js",
    "prettier": "node ./build-tools/task-prettify-js.js",
    "rollup-react": "node ./build-tools/task-rollup-react.js",
    "build-vendors": "node ./build-tools/task-prepare-vendors.js",
    "pre-commit": "node ./build-tools/task-pre-commit.js",
    "watch": "node ./build-tools/task-watch.js",
    "lint": "./node_modules/.bin/eslint ./src/**/*.{ts,tsx}",
    "tsc": "./node_modules/.bin/tsc --pretty --noEmit --jsx preserve ./src/index.tsx",
    "mock-on": "node ./build-tools/task-mock.js on",
    "mock-off": "node ./build-tools/task-mock.js off"
  },
  "devDependencies": {
    "json-server": "^0.16.3",
    "@babel/cli": "^7.13.14",
    "@babel/core": "^7.13.15",
    "@babel/plugin-transform-react-jsx": "^7.13.12",
    "@babel/plugin-transform-typescript": "^7.13.0",
    "@babel/preset-env": "^7.13.15",
    "@types/jest": "^26.0.22",
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "autoprefixer": "^10.2.5",
    "babel-jest": "^26.6.3",
    "core-js": "^3.10.1",
    "csso": "^4.2.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.6",
    "enzyme-to-json": "^3.6.2",
    "eslint": "^7.24.0",
    "eslint-config-google": "^0.14.0",
    "jest": "^26.6.3",
    "js-beautify": "^1.13.5",
    "livereload": "^0.9.3",
    "node-sass": "^5.0.0",
    "postcss": "^8.2.10",
    "prettier": "^2.2.1",
    "prettier-eslint": "^12.0.0",
    "rollup": "^2.45.1",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-replace": "^2.2.0",
    "typescript": "^4.2.4",
    "uglify-es": "^3.3.9",
    "useref": "^1.4.3"
  }
}
